<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:background="#6D6767"
                android:text="TASTY"
                android:textAlignment="center"
                android:textColor="#F8FAFA"
                android:textSize="45dp"
                android:textStyle="bold"/>


            <Button
                android:id="@+id/btn25"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/asian"
                android:text="ASIAN RECIPES"
                android:layout_marginTop="20dp"
                android:textColor="#ffff"
                android:textSize="36sp" />
            <Button
                android:id="@+id/btn26"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/japanis"
                android:layout_marginTop="20dp"
                android:text="JAPANESE RECIPES"
                android:textColor="#ffff"
                android:textSize="36sp" />
            <Button
                android:id="@+id/btn27"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/american"
                android:layout_marginTop="20dp"
                android:text="OTHER COUNTRYS RECIPES"
                android:textColor="#ffff"
                android:textSize="36sp" />



        </LinearLayout>

    </ScrollView>

</RelativeLayout>